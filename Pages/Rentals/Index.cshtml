@page
@model CarRentingApp.Pages.Rentals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Rental[0].Customer.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Rental[0].Car.Model)</th>
            <th>@Html.DisplayNameFor(model => model.Rental[0].Location.City)</th>
            <th>@Html.DisplayNameFor(model => model.Rental[0].Location.Country)</th>
            <th>@Html.DisplayNameFor(model => model.Rental[0].StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.Rental[0].EndDate)</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rental) {
        <tr>
                <td>@item.Customer.FullName</td>
                <td>@item.Car.FullModel</td>
                <td>@item.Location.City</td>
                <td>@item.Location.Country</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.TotalPrice.ToString()</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
