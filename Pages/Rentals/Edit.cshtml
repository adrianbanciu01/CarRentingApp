@page
@model CarRentingApp.Pages.Rentals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rental.ID" />
            <div class="form-group">
                <label asp-for="Rental.StartDate" class="control-label"></label>
                <input asp-for="Rental.StartDate" class="form-control" />
                <span asp-validation-for="Rental.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.EndDate" class="control-label"></label>
                <input asp-for="Rental.EndDate" class="form-control" />
                <span asp-validation-for="Rental.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Rental.CarID" class="control-label"></label>
                <select asp-for="Rental.CarID" class="form-control" asp-items="ViewBag.CarID"></select>
                <span asp-validation-for="Rental.CarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Rental.CustomerID" class="control-label"></label>
                <select asp-for="Rental.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Rental.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.LocationID" class="control-label"></label>
                <select asp-for="Rental.LocationID" class="form-control" asp-items="ViewBag.LocationID"></select>
                <span asp-validation-for="Rental.LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
