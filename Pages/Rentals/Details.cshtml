@page
@model CarRentingApp.Pages.Rentals.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Rental.Customer.FullName</dd>

        <dt class="col-sm-2">Car</dt>
        <dd class="col-sm-10">@Model.Rental.Car.Make @Model.Rental.Car.Model</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.Rental.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.Rental.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Rental.Location.City, @Model.Rental.Location.Country</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@((Model.Rental.EndDate - Model.Rental.StartDate).Days * Model.Rental.Car.PricePerDay).ToString("C")</dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Rental.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
